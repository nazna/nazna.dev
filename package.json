{
  "name": "nazna.dev",
  "private": true,
  "type": "module",
  "version": "2.0.0",
  "description": "A website about nazna",
  "author": "nazna <naznagg@gmail.com> (https://nazna.dev)",
  "scripts": {
    "dev": "nodemon --quiet & wrangler pages dev ./dist",
    "build": "ts-node-esm ./src/main.ts",
    "publish": "wrangler pages publish ./dist",
    "lint": "npm run typecheck && npm run eslint && npm run prettier",
    "typecheck": "tsc --noEmit",
    "eslint": "eslint --ignore-path .gitignore --no-error-on-unmatched-pattern --fix .",
    "prettier": "prettier --ignore-path .gitignore --list-different --write ."
  },
  "dependencies": {
    "@markdoc/markdoc": "0.1.4",
    "feed": "4.2.2",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "wrangler": "2.0.25",
    "yaml": "2.1.1"
  },
  "devDependencies": {
    "@types/node": "18.7.2",
    "@types/react": "18.0.17",
    "@types/react-dom": "18.0.6",
    "@typescript-eslint/eslint-plugin": "5.33.0",
    "@typescript-eslint/parser": "5.33.0",
    "eslint": "8.21.0",
    "eslint-config-prettier": "8.5.0",
    "nodemon": "2.0.19",
    "postcss": "8.4.16",
    "prettier": "2.7.1",
    "prettier-plugin-css-order": "1.3.0",
    "ts-node": "10.9.1",
    "typescript": "4.7.4"
  },
  "engines": {
    "node": "18.x",
    "npm": "8.x"
  },
  "nodemonConfig": {
    "watch": [
      "./src",
      "./public"
    ],
    "ext": "ts,tsx,md,css,svg",
    "exec": "NODE_ENV=development ts-node-esm ./src/main.ts"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "es2022": true,
      "node": true
    },
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier"
    ]
  },
  "prettier": {
    "keepOverrides": false,
    "order": "smacss",
    "printWidth": 120,
    "semi": false,
    "singleQuote": true
  }
}
